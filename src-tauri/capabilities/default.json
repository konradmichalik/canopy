{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default capabilities for the Canopy app",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "store:default",
    "shell:allow-open",
    {
      "identifier": "http:default",
      "allow": [
        { "url": "https://*.atlassian.net/**" },
        { "url": "https://*.jira.com/**" },
        { "url": "http://**" },
        { "url": "https://**" }
      ]
    }
  ]
}
